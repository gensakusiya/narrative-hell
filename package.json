{
  "name": "narrative-hell",
  "displayName": "narrative-hell",
  "description": "Visual story designer for games with branching narratives",
  "version": "0.0.1",
  "engines": {
    "node": ">=24",
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "narrative",
    "story",
    "game",
    "quest",
    "dialogue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "nhell",
        "aliases": [
          "Narrative Hell",
          "nhell"
        ],
        "extensions": [
          ".nhell",
          ".nh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nhell",
        "scopeName": "source.nhell",
        "path": "./syntaxes/nhell.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "narrative-hell.showGraph",
        "title": "Show Story Graph",
        "icon": "$(graph)"
      },
      {
        "command": "narrative-hell.validate",
        "title": "Validate Story Flow",
        "icon": "$(check)"
      },
      {
        "command": "narrative-hell.simulate",
        "title": "Simulate from Here"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .nhell || resourceExtname == .nh",
          "command": "narrative-hell.showGraph",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .nhell || resourceExtname == .nh",
          "command": "narrative-hell.validate",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run build:extension && pnpm run build:web",
    "build:extension": "vite build",
    "build:web": "cd src/web && vite build",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "vite build --watch",
    "watch:web": "cd src/web && vite build --watch",
    "preview": "vite preview",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "esbuild-plugin-tailwindcss": "^2.1.0",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "dependencies": {
    "@xyflow/react": "^12.8.6",
    "elkjs": "^0.11.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
