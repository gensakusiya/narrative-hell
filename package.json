{
  "name": "narrative-hell",
  "displayName": "narrative-hell",
  "description": "Visual story designer for games with branching narratives",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=24",
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "narrative",
    "story",
    "game",
    "quest",
    "dialogue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "nhell",
        "aliases": [
          "Narrative Hell",
          "nhell"
        ],
        "extensions": [
          ".nhell",
          ".nh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nhell",
        "scopeName": "source.nhell",
        "path": "./syntaxes/nhell.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "narrative-hell.showGraph",
        "title": "Show Story Graph",
        "icon": "$(graph)"
      },
      {
        "command": "narrative-hell.validate",
        "title": "Validate Story Flow",
        "icon": "$(check)"
      },
      {
        "command": "narrative-hell.simulate",
        "title": "Simulate from Here"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .nhell || resourceExtname == .nh",
          "command": "narrative-hell.showGraph",
          "group": "navigation"
        },
        {
          "when": "resourceExtname == .nhell || resourceExtname == .nh",
          "command": "narrative-hell.validate",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "watch": "pnpm -r --parallel watch",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "eslint": "^9.36.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
